<% layout("/layouts/boilerplate")%>

<style>
  .signup-container {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
  }

  .signup-card {
    background: white;
    border-radius: 24px;
    box-shadow: 0 8px 32px rgba(254, 66, 77, 0.12);
    padding: 3rem;
    max-width: 480px;
    width: 100%;
    border: 1px solid rgba(254, 66, 77, 0.1);
  }

  .signup-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .signup-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #fff5f7 0%, #ffe5ec 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    box-shadow: 0 4px 16px rgba(254, 66, 77, 0.2);
  }

  .signup-icon i {
    font-size: 2.5rem;
    color: #fe424d;
  }

  .signup-header h1 {
    font-size: 1.8rem;
    font-weight: 700;
    color: #222222;
    margin-bottom: 0.5rem;
  }

  .signup-header p {
    color: #717171;
    font-size: 0.95rem;
    margin: 0;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-label {
    font-weight: 600;
    color: #222222;
    margin-bottom: 0.5rem;
    display: block;
    font-size: 0.9rem;
  }

  .input-wrapper {
    position: relative;
  }

  .input-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #717171;
    font-size: 1.1rem;
    transition: all 0.3s ease;
  }

  .form-control {
    width: 100%;
    padding: 0.85rem 1rem 0.85rem 3rem;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    background: #f9fafb;
  }

  .form-control:focus {
    outline: none;
    border-color: #fe424d;
    background: white;
    box-shadow: 0 0 0 4px rgba(254, 66, 77, 0.1);
  }

  .form-control:focus + .input-icon {
    color: #fe424d;
  }

  .form-control.is-valid {
    border-color: #10b981;
    background: #f0fdf4;
  }

  .form-control.is-valid:focus {
    box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
  }

  .form-control::placeholder {
    color: #9ca3af;
  }

  .password-toggle {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: #717171;
    cursor: pointer;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    padding: 0.5rem;
    z-index: 10;
  }

  .password-toggle:hover {
    color: #fe424d;
  }

  .valid-feedback {
    display: none;
    color: #10b981;
    font-size: 0.85rem;
    margin-top: 0.5rem;
    font-weight: 500;
  }

  .valid-feedback.show {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .valid-feedback i {
    font-size: 1rem;
  }

  .password-strength {
    margin-top: 0.5rem;
  }

  .strength-meter {
    height: 4px;
    background: #e5e7eb;
    border-radius: 2px;
    overflow: hidden;
    margin-bottom: 0.5rem;
  }

  .strength-meter-fill {
    height: 100%;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .strength-text {
    font-size: 0.8rem;
    font-weight: 600;
  }

  .btn-signup {
    width: 100%;
    background: linear-gradient(135deg, #fe424d 0%, #ff6b6b 100%);
    color: white;
    border: none;
    border-radius: 12px;
    padding: 0.9rem;
    font-weight: 700;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(254, 66, 77, 0.3);
    margin-top: 1rem;
  }

  .btn-signup:hover {
    background: linear-gradient(135deg, #e03943 0%, #fe424d 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(254, 66, 77, 0.4);
  }

  .btn-signup:active {
    transform: translateY(0);
  }

  .divider {
    display: flex;
    align-items: center;
    margin: 2rem 0;
    color: #9ca3af;
    font-size: 0.85rem;
  }

  .divider::before,
  .divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: #e5e7eb;
  }

  .divider::before {
    margin-right: 1rem;
  }

  .divider::after {
    margin-left: 1rem;
  }

  .login-link {
    text-align: center;
    margin-top: 1.5rem;
    color: #717171;
    font-size: 0.9rem;
  }

  .login-link a {
    color: #fe424d;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .login-link a:hover {
    color: #e03943;
    text-decoration: underline;
  }

  .terms-checkbox {
    margin-top: 1rem;
  }

  .form-check {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .form-check-input {
    width: 1.2rem;
    height: 1.2rem;
    cursor: pointer;
    border: 2px solid #e5e7eb;
    margin-top: 0.15rem;
    flex-shrink: 0;
  }

  .form-check-input:checked {
    background-color: #fe424d;
    border-color: #fe424d;
  }

  .form-check-label {
    color: #717171;
    cursor: pointer;
    margin: 0;
    font-size: 0.85rem;
    line-height: 1.4;
  }

  .form-check-label a {
    color: #fe424d;
    text-decoration: none;
    font-weight: 600;
  }

  .form-check-label a:hover {
    text-decoration: underline;
  }

  @media (max-width: 576px) {
    .signup-card {
      padding: 2rem 1.5rem;
    }

    .signup-header h1 {
      font-size: 1.5rem;
    }
  }
</style>

<div class="signup-container">
  <div class="signup-card">
    <div class="signup-header">
      <div class="signup-icon">
        <i class="fa-solid fa-user-plus"></i>
      </div>
      <h1>Join Wanderlust</h1>
      <p>Create your account and start exploring</p>
    </div>

    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="form-group">
        <label for="username" class="form-label">Username</label>
        <div class="input-wrapper">
          <input 
            class="form-control" 
            type="text" 
            name="username" 
            id="username" 
            placeholder="Choose a unique username"
            required
          >
          <i class="fa-solid fa-user input-icon"></i>
        </div>
        <div class="valid-feedback">
          <i class="fa-solid fa-circle-check"></i>
          Username looks good!
        </div>
      </div>

      <div class="form-group">
        <label for="email" class="form-label">Email Address</label>
        <div class="input-wrapper">
          <input 
            class="form-control" 
            type="email" 
            name="email" 
            id="email" 
            placeholder="your@email.com"
            required
          >
          <i class="fa-solid fa-envelope input-icon"></i>
        </div>
        <div class="valid-feedback">
          <i class="fa-solid fa-circle-check"></i>
          Email looks good!
        </div>
      </div>

      <div class="form-group">
        <label for="password" class="form-label">Password</label>
        <div class="input-wrapper">
          <input 
            class="form-control" 
            type="password" 
            name="password" 
            id="password" 
            placeholder="Create a strong password"
            required
          >
          <i class="fa-solid fa-lock input-icon"></i>
          <button type="button" class="password-toggle" onclick="togglePassword()">
            <i class="fa-solid fa-eye" id="toggleIcon"></i>
          </button>
        </div>
        <div class="password-strength" id="passwordStrength" style="display: none;">
          <div class="strength-meter">
            <div class="strength-meter-fill" id="strengthMeterFill"></div>
          </div>
          <div class="strength-text" id="strengthText"></div>
        </div>
      </div>

      <div class="terms-checkbox">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="agreeTerms" required>
          <label class="form-check-label" for="agreeTerms">
            I agree to the <a href="/terms">Terms of Service</a> and <a href="/privacy">Privacy Policy</a>
          </label>
        </div>
      </div>

      <button class="btn-signup" type="submit">
        <i class="fa-solid fa-user-plus"></i> Create Account
      </button>
    </form>

    <div class="divider">OR</div>

    <div class="login-link">
      Already have an account? <a href="/login">Login here</a>
    </div>
  </div>
</div>

<script>
  function togglePassword() {
    const passwordInput = document.getElementById('password');
    const toggleIcon = document.getElementById('toggleIcon');
    
    if (passwordInput.type === 'password') {
      passwordInput.type = 'text';
      toggleIcon.classList.remove('fa-eye');
      toggleIcon.classList.add('fa-eye-slash');
    } else {
      passwordInput.type = 'password';
      toggleIcon.classList.remove('fa-eye-slash');
      toggleIcon.classList.add('fa-eye');
    }
  }

  // Password strength checker
  const passwordInput = document.getElementById('password');
  const strengthMeter = document.getElementById('passwordStrength');
  const strengthMeterFill = document.getElementById('strengthMeterFill');
  const strengthText = document.getElementById('strengthText');

  passwordInput.addEventListener('input', function() {
    const password = this.value;
    
    if (password.length === 0) {
      strengthMeter.style.display = 'none';
      return;
    }

    strengthMeter.style.display = 'block';
    
    let strength = 0;
    if (password.length >= 8) strength++;
    if (password.match(/[a-z]+/)) strength++;
    if (password.match(/[A-Z]+/)) strength++;
    if (password.match(/[0-9]+/)) strength++;
    if (password.match(/[@$!%*?&#]+/)) strength++;

    let color, text, width;
    
    if (strength <= 2) {
      color = '#ef4444';
      text = 'Weak password';
      width = '33%';
    } else if (strength <= 3) {
      color = '#f59e0b';
      text = 'Medium password';
      width = '66%';
    } else {
      color = '#10b981';
      text = 'Strong password';
      width = '100%';
    }

    strengthMeterFill.style.width = width;
    strengthMeterFill.style.backgroundColor = color;
    strengthText.style.color = color;
    strengthText.textContent = text;
  });

  // Form validation feedback
  const form = document.querySelector('.needs-validation');
  const inputs = form.querySelectorAll('.form-control');

  inputs.forEach(input => {
    input.addEventListener('blur', function() {
      if (this.value.trim() !== '') {
        if (this.type === 'email') {
          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (emailRegex.test(this.value)) {
            this.classList.add('is-valid');
            this.parentElement.nextElementSibling?.classList.add('show');
          }
        } else if (this.id === 'username' && this.value.length >= 3) {
          this.classList.add('is-valid');
          this.parentElement.nextElementSibling?.classList.add('show');
        }
      }
    });

    input.addEventListener('input', function() {
      this.classList.remove('is-valid');
      this.parentElement.nextElementSibling?.classList.remove('show');
    });
  });
</script>