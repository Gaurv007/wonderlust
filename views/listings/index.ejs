<% layout("layouts/boilerplate") %>

<style>
  /* Hero Section */
  .hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 4rem 2rem;
    margin: 0 2rem;
    border-radius: 0 0 40px 40px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 500px;
    height: 500px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    animation: float 6s ease-in-out infinite;
  }

  .hero-section::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -10%;
    width: 400px;
    height: 400px;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 50%;
    animation: float 8s ease-in-out infinite reverse;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
    }
  }

  .hero-content {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    text-align: center;
  }

  .hero-content h1 {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.2;
    background: linear-gradient(135deg, #fff 0%, #ffd700 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-content .subtitle {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    opacity: 0.95;
    font-weight: 500;
  }

  .hero-content .description {
    font-size: 1.1rem;
    opacity: 0.85;
    max-width: 800px;
    margin: 0 auto 2rem;
    line-height: 1.6;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-top: 2.5rem;
    flex-wrap: wrap;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    display: block;
    color: #ffd700;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
  }

  .stat-label {
    font-size: 0.95rem;
    opacity: 0.9;
    margin-top: 0.5rem;
  }

  .hero-features {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 2rem;
    flex-wrap: wrap;
  }

  .feature-badge {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
    border: 2px solid rgba(255, 255, 255, 0.3);
  }

  .feature-badge:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .feature-badge i {
    font-size: 1.5rem;
    color: #ffd700;
  }

  .feature-badge span {
    font-weight: 600;
    font-size: 0.95rem;
  }

  /* Main Container */
  .listings-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Filter Bar Container */
  .filter-bar-wrapper {
    position: sticky;
    top: 0;
    background: white;
    z-index: 100;
    border-bottom: 1px solid #E5E7EB;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    margin-top: 2rem;
  }

  .filter-bar-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    max-width: 1600px;
    margin: 0 auto;
    gap: 1rem;
  }

  /* Filters Scroll Section */
  .filters-scroll-wrapper {
    flex: 1;
    overflow: hidden;
    position: relative;
  }

  .filters {
    display: flex;
    gap: 2rem;
    overflow-x: auto;
    scroll-behavior: smooth;
    padding: 0.5rem 0;
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    flex-shrink: 0;
    text-align: center;
    padding: 0.5rem 0.75rem;
    opacity: 0.6;
    cursor: pointer;
    transition: all 0.2s ease;
    border-bottom: 2px solid transparent;
  }

  .filter:hover {
    opacity: 1;
    border-bottom-color: #E5E7EB;
  }

  .filter.active {
    opacity: 1;
    border-bottom-color: #222222;
  }

  .filter i {
    font-size: 1.5rem;
    color: #717171;
    display: block;
    margin-bottom: 0.5rem;
    transition: all 0.2s ease;
  }

  .filter:hover i,
  .filter.active i {
    color: #222222;
  }

  .filter p {
    font-size: 0.75rem;
    font-weight: 500;
    margin: 0;
    color: #717171;
    white-space: nowrap;
  }

  .filter:hover p,
  .filter.active p {
    color: #222222;
  }

  /* Scroll Buttons */
  .scroll-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 2rem;
    height: 2rem;
    background: white;
    border: 1px solid #E5E7EB;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    opacity: 0;
    transition: all 0.2s ease;
  }

  .filters-scroll-wrapper:hover .scroll-btn {
    opacity: 1;
  }

  .scroll-btn:hover {
    background: #f7f7f7;
  }

  .scroll-btn-left {
    left: 0;
  }

  .scroll-btn-right {
    right: 0;
  }

  .scroll-btn i {
    color: #222222;
    font-size: 0.75rem;
  }

  /* Tax Toggle */
  .tax-toggle {
    flex-shrink: 0;
    border: 1px solid #E5E7EB;
    border-radius: 12px;
    padding: 0.5rem 1rem;
    display: flex;
    align-items: center;
    background: white;
    transition: all 0.2s ease;
  }

  .tax-toggle:hover {
    border-color: #222222;
  }

  .form-check {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0;
  }

  .form-check-input {
    cursor: pointer;
    width: 2.5rem;
    height: 1.25rem;
    border: 2px solid #D1D5DB;
    margin: 0;
  }

  .form-check-input:checked {
    background-color: #222222;
    border-color: #222222;
  }

  .form-check-label {
    font-size: 0.8rem;
    font-weight: 500;
    color: #222222;
    cursor: pointer;
    margin: 0;
    white-space: nowrap;
  }

  /* No Results */
  .no-results {
    text-align: center;
    padding: 4rem 2rem;
    background: #F9FAFB;
    border-radius: 16px;
    margin: 2rem 0;
  }

  .no-results i {
    font-size: 4rem;
    color: #D1D5DB;
    margin-bottom: 1rem;
  }

  .no-results h4 {
    color: #374151;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .no-results p {
    color: #6B7280;
  }

  /* Listing Cards */
  .listing-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .listing-card {
    border: none;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: none;
    margin-bottom: 2rem;
    background: white;
  }

  .listing-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.12);
  }

  .listing-card img {
    height: 20rem;
    object-fit: cover;
    transition: all 0.3s ease;
  }

  .listing-card:hover img {
    transform: scale(1.02);
  }

  .card-body {
    padding: 1rem;
  }

  .card-text {
    margin: 0;
  }

  .card-text b {
    display: block;
    font-size: 0.95rem;
    color: #222222;
    margin-bottom: 0.25rem;
    font-weight: 500;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .price-wrapper {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.9rem;
  }

  .price {
    color: #222222;
    font-weight: 600;
  }

  .night-text {
    color: #717171;
    font-weight: 400;
  }

  .taxinfo {
    display: none;
    color: #222222;
    font-size: 0.8rem;
    font-weight: 400;
    margin-left: 0.25rem;
  }

  /* Favorite Heart */
  .favorite-icon {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    width: 2rem;
    height: 2rem;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.2s ease;
    z-index: 10;
    cursor: pointer;
  }

  .listing-card:hover .favorite-icon {
    opacity: 1;
  }

  .favorite-icon:hover {
    transform: scale(1.1);
  }

  .favorite-icon i {
    color: #222222;
    font-size: 1rem;
  }

  /* Grid Layout */
  .listings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-section {
      margin: 0 1rem;
      padding: 3rem 1.5rem;
    }

    .hero-content h1 {
      font-size: 2.5rem;
    }

    .hero-content .subtitle {
      font-size: 1.1rem;
    }

    .filter-bar-container {
      padding: 1rem;
    }

    .tax-toggle {
      display: none;
    }

    .filters {
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .hero-section {
      margin: 0 0.5rem;
      padding: 2.5rem 1rem;
      border-radius: 0 0 24px 24px;
    }

    .hero-content h1 {
      font-size: 2rem;
    }

    .hero-content .subtitle {
      font-size: 1rem;
    }

    .hero-content .description {
      font-size: 0.95rem;
    }

    .hero-stats {
      gap: 2rem;
    }

    .stat-number {
      font-size: 2rem;
    }

    .hero-features {
      gap: 1rem;
    }

    .listings-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .listing-card img {
      height: 16rem;
    }
  }
</style>

<!-- Hero Section -->
