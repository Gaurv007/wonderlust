<% layout("/layouts/boilerplate")%>

<div class="create-listing-container">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      
      <!-- Header Section -->
      <div class="page-header">
        <a href="/listings" class="back-link">
          <i class="fas fa-arrow-left"></i> Back to all listings
        </a>
        <h1 class="page-title">List Your Property</h1>
        <p class="page-subtitle">Share your space with travelers from around the world</p>
      </div>

      <!-- Progress Indicator -->
      <div class="progress-indicator">
        <div class="progress-step active">
          <div class="step-number">1</div>
          <span class="step-label">Basic Info</span>
        </div>
        <div class="progress-line"></div>
        <div class="progress-step">
          <div class="step-number">2</div>
          <span class="step-label">Photos</span>
        </div>
        <div class="progress-line"></div>
        <div class="progress-step">
          <div class="step-number">3</div>
          <span class="step-label">Location</span>
        </div>
      </div>

      <!-- Create Form Card -->
      <div class="create-form-card">
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" id="createListingForm">
          
          <!-- Basic Information Section -->
          <div class="form-section">
            <div class="section-header">
              <h3 class="section-title">
                <i class="fas fa-home"></i> Tell us about your place
              </h3>
              <span class="step-badge">Step 1 of 3</span>
            </div>
            
            <!-- Title -->
            <div class="form-group">
              <label class="form-label" for="title">
                Property Title <span class="required">*</span>
              </label>
              <input 
                class="form-control form-control-modern" 
                type="text" 
                id="title"
                name="listing[title]" 
                placeholder="e.g., Stunning Mountain View Cabin with Hot Tub"
                required
                maxlength="100"
              />
              <div class="form-feedback">
                <div class="valid-feedback">
                  <i class="fas fa-check-circle"></i> Perfect title!
                </div>
                <div class="invalid-feedback">
                  <i class="fas fa-exclamation-circle"></i> Please enter a catchy title
                </div>
              </div>
              <small class="form-text">
                <i class="fas fa-lightbulb"></i> Tip: Highlight unique features that make your place special
              </small>
            </div>

            <!-- Description -->
            <div class="form-group">
              <label class="form-label" for="description">
                Description <span class="required">*</span>
              </label>
              <textarea 
                class="form-control form-control-modern" 
                id="description"
                name="listing[description]" 
                rows="6"
                placeholder="Describe your space, amenities, what makes it special, nearby attractions..."
                required
                minlength="50"
              ></textarea>
              <div class="form-feedback">
                <div class="invalid-feedback">
                  <i class="fas fa-exclamation-circle"></i> Please provide a detailed description (at least 50 characters)
                </div>
              </div>
              <small class="form-text">
                <span id="descCharCount">0</span> / 500 characters â€¢ 
                <span id="descWordCount">0</span> words
              </small>
            </div>
          </div>

          <!-- Images Section -->
          <div class="form-section">
            <div class="section-header">
              <h3 class="section-title">
                <i class="fas fa-camera"></i> Show off your space
              </h3>
              <span class="step-badge">Step 2 of 3</span>
            </div>
            
            <!-- Image Upload -->
            <div class="form-group">
              <label class="form-label" for="image">
                Property Photos <span class="required">*</span>
              </label>
              <div class="file-upload-wrapper">
                <input 
                  class="file-input" 
                  type="file" 
                  id="image"
                  name="listing[image]"
                  accept="image/*"
                  required
                  onchange="handleImageUpload(event)"
                />
                <label for="image" class="file-upload-label">
                  <div class="upload-icon">
                    <i class="fas fa-cloud-upload-alt"></i>
                  </div>
                  <span class="upload-text">Click to upload or drag and drop</span>
                  <span class="upload-subtext">High-quality photos help attract more guests</span>
                  <span class="upload-formats">PNG, JPG, WEBP (Max 10MB)</span>
                </label>
                
                <!-- Image Preview -->
                <div id="imagePreviewContainer" class="image-preview-container" style="display: none;">
                  <div class="preview-badge">
                    <i class="fas fa-check-circle"></i> Image uploaded
                  </div>
                  <img id="imagePreview" alt="Property preview"/>
                  <button type="button" class="remove-image" onclick="removeImage()">
                    <i class="fas fa-trash-alt"></i> Remove
                  </button>
                </div>
              </div>
              <div class="form-feedback">
                <div class="invalid-feedback">
                  <i class="fas fa-exclamation-circle"></i> Please upload at least one photo of your property
                </div>
              </div>
              <small class="form-text">
                <i class="fas fa-info-circle"></i> Pro tip: Upload bright, well-lit photos that showcase your best features
              </small>
            </div>
          </div>

          <!-- Pricing & Location Section -->
          <div class="form-section">
            <div class="section-header">
              <h3 class="section-title">
                <i class="fas fa-map-marker-alt"></i> Set your price and location
              </h3>
              <span class="step-badge">Step 3 of 3</span>
            </div>
            
            <!-- Price -->
            <div class="form-group">
              <label class="form-label" for="price">
                Price per Night <span class="required">*</span>
              </label>
              <div class="input-with-icon">
                <span class="input-icon">$</span>
                <input 
                  class="form-control form-control-modern with-icon" 
                  type="number" 
                  id="price"
                  name="listing[price]" 
                  placeholder="99"
                  min="1"
                  required
                />
                <div class="price-suggestion" id="priceSuggestion"></div>
              </div>
              <div class="form-feedback">
                <div class="invalid-feedback">
                  <i class="fas fa-exclamation-circle"></i> Please enter a valid price
                </div>
              </div>
              <small class="form-text">
                <i class="fas fa-chart-line"></i> Average prices in your area: $75-$150/night
              </small>
            </div>

            <!-- Country & Location Row -->
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="form-label" for="country">
                    Country <span class="required">*</span>
                  </label>
                  <div class="input-with-icon">
                    <span class="input-icon"><i class="fas fa-globe-americas"></i></span>
                    <input 
                      class="form-control form-control-modern with-icon" 
                      type="text" 
                      id="country"
                      name="listing[country]" 
                      placeholder="United States"
                      required
                      list="countryList"
                    />
                    <datalist id="countryList">
                      <option value="United States">
                      <option value="India">
                      <option value="United Kingdom">
                      <option value="Canada">
                      <option value="Australia">
                      <option value="France">
                      <option value="Spain">
                      <option value="Italy">
                      <option value="Japan">
                      <option value="Mexico">
                    </datalist>
                  </div>
                  <div class="form-feedback">
                    <div class="invalid-feedback">
                      <i class="fas fa-exclamation-circle"></i> Please enter the country
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label class="form-label" for="location">
                    City / Location <span class="required">*</span>
                  </label>
                  <div class="input-with-icon">
                    <span class="input-icon"><i class="fas fa-map-pin"></i></span>
                    <input 
                      class="form-control form-control-modern with-icon" 
                      type="text" 
                      id="location"
                      name="listing[location]" 
                      placeholder="San Francisco, CA"
                      required
                    />
                  </div>
                  <div class="form-feedback">
                    <div class="invalid-feedback">
                      <i class="fas fa-exclamation-circle"></i> Please enter the location
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="form-actions">
            <a href="/listings" class="btn btn-cancel">
              <i class="fas fa-times"></i> Cancel
            </a>
            <button type="submit" class="btn btn-primary-custom">
              <i class="fas fa-plus-circle"></i> Create Listing
            </button>
          </div>

        </form>
      </div>

