<script>
// Form validation
(function() {
  'use strict';
  const form = document.getElementById('createListingForm');
  
  form.addEventListener('submit', function(event) {
    if (!form.checkValidity()) {
      event.preventDefault();
      event.stopPropagation();
    }
    form.classList.add('was-validated');
  }, false);
})();

// Character and word counter
const description = document.getElementById('description');
const charCount = document.getElementById('descCharCount');
const wordCount = document.getElementById('descWordCount');

if (description && charCount && wordCount) {
  const updateCounts = () => {
    const text = description.value;
    charCount.textContent = text.length;
    
    const words = text.trim().split(/\s+/).filter(word => word.length > 0);
    wordCount.textContent = words.length;
  };
  
  description.addEventListener('input', updateCounts);
}

// Image upload handler
function handleImageUpload(event) {
  const file = event.target.files[0];
  if (file) {
    // Validate file size (10MB)
    if (file.size > 10 * 1024 * 1024) {
      alert('File size must be less than 10MB');
      event.target.value = '';
      return;
    }
    
    const reader = new FileReader();
    reader.onload = function(e) {
      const container = document.getElementById('imagePreviewContainer');
      const preview = document.getElementById('imagePreview');
      const label = document.querySelector('.file-upload-label');
      
      preview.src = e.target.result;
      container.style.display = 'block';
      label.style.display = 'none';
    };
    reader.readAsDataURL(file);
  }
}

// Remove image
function removeImage() {
  const fileInput = document.getElementById('image');
  const container = document.getElementById('imagePreviewContainer');
  const label = document.querySelector('.file-upload-label');
  
  fileInput.value = '';
  container.style.display = 'none';
  label.style.display = 'flex';
}

// Price suggestion (simple logic)
const priceInput = document.getElementById('price');
const priceSuggestion = document.getElementById('priceSuggestion');

if (priceInput && priceSuggestion) {
  priceInput.addEventListener('input', function() {
    const value = parseInt(this.value);
    if (value > 0) {
      if (value < 50) {
        priceSuggestion.textContent = 'ðŸ’¡ Consider pricing higher';
        priceSuggestion.style.color = '#F59E0B';
      } else if (value >= 50 && value <= 200) {
        priceSuggestion.textContent = 'âœ“ Great price!';
        priceSuggestion.style.color = '#10B981';
      } else {
        priceSuggestion.textContent = 'ðŸ’Ž Premium pricing';
        priceSuggestion.style.color = '#8B5CF6';
      }
    } else {
      priceSuggestion.textContent = '';
    }
  });
}

// Smooth scroll to first error
document.getElementById('createListingForm').addEventListener('invalid', function(e) {
  e.target.scrollIntoView({ behavior: 'smooth', block: 'center' });
}, true);
</script>